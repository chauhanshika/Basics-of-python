import random

number = random.randint(1, 20)
tries = 0

print("ğŸ® Guess the number between 1 and 20!")

while True:
    guess = int(input("Enter your guess: "))
    tries += 1
    if guess == number:
        print(f"ğŸ† You guessed it right in {tries} tries!")
        break
    elif guess < number:
        print("â¬†ï¸ Try higher!")
    else:
        print("â¬‡ï¸ Try lower!")
