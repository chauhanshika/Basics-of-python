# Program to check if a number is both Harshad and Prime

num = int(input("Enter a number: "))

# function to calculate digit sum
def digit_sum(n):
    s = 0
    while n > 0:
        s += n % 10
        n //= 10
    return s

# function to check prime
def is_prime(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

sum_digits = digit_sum(num)

if num % sum_digits == 0 and is_prime(num):
    print(num, "is a Harshad Prime Number.")
else:
    print(num, "is NOT a Harshad Prime Number.")
