planner = {}

while True:
    print("\nğŸ—“ï¸ Daily Planner Menu:")
    print("1ï¸âƒ£ Add task\n2ï¸âƒ£ View tasks\n3ï¸âƒ£ Exit")
    choice = input("Enter choice: ")

    if choice == '1':
        time = input("Enter time (e.g., 10:00 AM): ")
        task = input("Enter task: ")
        planner[time] = task
        print("âœ… Task added!")
    elif choice == '2':
        print("\nğŸ•’ Your Schedule for Today:")
        for t, task in sorted(planner.items()):
            print(f"{t} â†’ {task}")
    elif choice == '3':
        print("ğŸ‘‹ Planner closed!")
        break
    else:
        print("âŒ Invalid option!")
