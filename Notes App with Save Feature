    if choice == '1':
        note = input("Write your note: ")
        with open(filename, "a") as f:
            f.write(note + "\n")
        print("âœ… Note saved!")
    elif choice == '2':
        with open(filename, "r") as f:
            print("\nğŸ“˜ Your Notes:")
            print(f.read())
    elif choice == '3':
