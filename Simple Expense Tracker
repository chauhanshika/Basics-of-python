expenses = {}

while True:
    print("\nğŸ’¸ Expense Tracker Menu")
    print("1. Add Expense")
    print("2. View Expenses")
    print("3. Exit")
    choice = input("Enter your choice: ")

    if choice == "1":
        item = input("Enter item name: ")
        cost = float(input("Enter amount (in â‚¹): "))
        expenses[item] = cost
        print("âœ… Added successfully!")
    elif choice == "2":
        print("\nğŸ§¾ Your Expenses:")
        total = 0
        for i, (item, cost) in enumerate(expenses.items(), 1):
            print(f"{i}. {item} - â‚¹{cost}")
            total += cost
        print("ğŸ’° Total Spent: â‚¹", total)
    elif choice == "3":
        print("ğŸ‘‹ Goodbye!")
        break
    else:
        print("âŒ Invalid input!")
