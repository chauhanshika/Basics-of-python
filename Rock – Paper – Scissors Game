import random

print(" Welcome to Rockâ€“Paperâ€“Scissors!")

choices = ["rock", "paper", "scissors"]

while True:
    user = input("\nEnter your choice (rock/paper/scissors or 'exit' to quit): ").lower()
    
    if user == "exit":
        print("ğŸ‘‹ Thanks for playing!")
        break
    if user not in choices:
        print("âš  Invalid choice! Try again.")
        continue

    computer = random.choice(choices)
    print("ğŸ¤– Computer chose:", computer)

    if user == computer:
        print("ğŸ˜ It's a tie!")
    elif (user == "rock" and computer == "scissors") or \
         (user == "scissors" and computer == "paper") or \
         (user == "paper" and computer == "rock"):
        print("ğŸ† You win!")
    else:
        print("ğŸ’” You lose!")
